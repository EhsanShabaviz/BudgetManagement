@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject NavigationManager NavManager


<div class="page">
    @* فقط وقتی صفحه لاگین نیست *@
    @if (!IsLoginPage)  
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <div class="top-row px-4">
            @* <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a> *@
            <AuthorizeView>
                <Authorized>
                    <a href="/Identity/Account/Logout" >خروج</a>
                </Authorized>
            </AuthorizeView>
        </div>



        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    // private bool IsLoginPage => NavManager.Uri.EndsWith("/Login");
    // private bool IsLoginPage => NavManager.Uri.EndsWith("/Login?ReturnUrl=%2F");
    private bool IsLoginPage =>
    NavManager.Uri.Contains("/Identity/Account/Login", StringComparison.OrdinalIgnoreCase);

}
