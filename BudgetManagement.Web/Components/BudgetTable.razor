@using BudgetManagement.Domain.Entities
<h3>Budget Table</h3>

@if (Records != null && Records.Any())
{
    <table class="table table-sm table-bordered">
        <thead class="table-light">
            <tr>
                <th>SubProjectCode</th>
                <th>ContractTitle</th>
                <th>ContractNumber</th>
                <th>InitialAmount</th>
                <th>TotalWorkProgress</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Records)
            {
                <tr>
                    <td>@r.SubProjectCode</td>
                    <td>@r.ContractTitle</td>
                    <td>@r.ContractNumber</td>
                    <td>@r.InitialAmount</td>
                    <td>@r.TotalWorkProgress</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">هیچ داده‌ای برای نمایش وجود ندارد.</p>
}

@code {
    [Parameter]
    public List<BudgetRecord>? Records { get; set; }
}
